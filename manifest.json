{
  "manifest_version": 3,
  "name": "Echo - Personalized Learning Assistant",
  "version": "1.0.0",
  "description": "AI-powered study tool for YouTube videos with quizzes, summaries, and spaced repetition",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  
  "action": {
    "default_popup": "src/html/popup.html",
    "default_title": "Echo Learning Assistant"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["src/js/content.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "src/js/background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/*"],
      "matches": ["https://*.youtube.com/*"]
    }
  ]
}

